#!/bin/bash

# Generate JavaScript API documentation using JSDoc configuration
npm run docs:js

# Copy README (uncomment if needed)
#cp README.html docs/about.html

# Build AsciiDoc documentation (uncomment if needed)
#asciidoctor docs/*.adoc

# Sync API docs (generated HTML) to static — served as-is by Hugo
rsync -av --delete docs/api/ ../www/static/docs/api/

# Sync everything else (adoc files, images) to content/docs — processed by Hugo
rsync -av --delete --exclude='api' docs/ ../www/content/docs/
